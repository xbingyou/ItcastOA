    @using (Ajax.BeginForm("AddUserInfo", "UserInfo", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterAdd" }, new { id = "addForm" }))
    {
        <table>
            <tr><td><div style="width: 48px;">编号</div></td><td><input type="text" name="ID" class="easyui-textbox" data-options="required:true,validType:['idNum','length[2,5]']" /></td></tr>
