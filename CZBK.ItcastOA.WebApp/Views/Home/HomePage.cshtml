
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomePage</title>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            bindClickEvent();
        });
        function bindClickEvent() {
            $(".detailLink").click(function () {
                var title = $(this).text();
                var url = $(this).attr("url");
                var isExt = $('#tt').tabs('exists', title);
                if (isExt) {
                    $('#tt').tabs('select', title);
                    return;
                }
                $('#tt').tabs('add', {
                    title: title,
                    content: showContent(url),
                    closable: true
                });

            });
        }
        function showContent(url) {
            var str = '<iframe src="' + url + '" width="100%" height="100%" frameborder="0"></iframe>';
            return str;
        }
    </script>
    <style type="text/css">
        .txt {
            font-size: 27px;
            color: deepskyblue;
            font-weight: bold;
            float: left;
            margin-top: 17px;
            margin-left: 30px;
        }
        .nlist li a {
            display: block;
            line-height: 25px;
            height: 30px;
            background: url(nav_icon.gif) no-repeat 5px top;
            border: 0px solid #fff;
            color: #333; 
            text-decoration: none;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 14px;
        }

            .nlist li a:hover {
                border: 1px solid #f5f5ff;
                font-weight: bold;
                background: url(nav_icon.gif) no-repeat 5px top;
                background-color: #eff4fe;
                text-overflow: inherit;
            }

        .nlist li.title {
            margin-top: 5px;
            line-height: 25px;
            font-weight: 600;
            color: #090;
            padding-left: 25px;
            background: url(nav_icon.gif) no-repeat 7px -50px;
        }

        .nlist li ul li {
            margin-left: -13px;
            font-weight: normal;
        }
    </style>
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height:55px;background:#B3DFDA;overflow:hidden;background-image:url('/Content/Images/bg3.png')">
        <img src="~/Content/Images/Bicycle.png" style="float:left;margin-left:12px" />
        <span class="txt">Public Bike Dispatch System</span>
    </div>
    <div data-options="region:'west',split:true,title:'Welcome'" style="width:150px;padding:3px;">
        <div class="easyui-accordion" fit="true">
            <div title="用户管理" style="overflow:auto;padding:5px;">
                <ul class="nlist">
                    <li title="用户管理"><a href="javascript:void(0)" class="detailLink" url="/UserInfo/Index">用户管理</a></li>
                    <li title="角色管理"><a href="javascript:void(0)" class="detailLink" url="/RoleInfo/Index">角色管理</a></li>
                </ul>
            </div>
            <div title="网点管理" style="padding:5px;">
                <a href="javascript:void(0)" class="detailLink" url="/RoleInfo/Index">网点管理</a>
            </div>
        </div>
    </div>
    <div data-options="region:'center'">
        <div class="easyui-tabs" style="width:700px;height:250px" fit="true" id="tt">
            <div title="用户管理" style="padding:10px">
                <iframe src="/UserInfo/Index" width="100%" height="100%" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</body>
</html>
